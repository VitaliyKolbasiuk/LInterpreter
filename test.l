(set x 10)
(set y 10)

(set 1playerX 10)
(set 1playerY 10)
(set 2playerX 10)
(set 2playerY 10)
 
(set width 1200)
(set height 600)
(set dx 2)
(set dy 2)
(set radius 30)
(set mousePressed nil)

 (defun mousePressEvent ()
    (set mousePressed T)
 )

 (defun mouseReleaseEvent ()
  (set mousePressed nil)
 )

 (defun mouseMoveEvent (x y)
      (set 1playerX x)
      (set 1playerY y)
 )

(defun paintEvent (painter)
    (gSetWindowSize width height)
    (gSetRenderHintAntialiasing painter true)
    (if ( OR ( > (+ x dx) (- width radius) ) (< (+ x dx) 0) )
        (set dx (- 0 dx)) )
    (if ( OR ( > (+ y dy) (- height radius) ) (< (+ y dy) 0) )
        (set dy (- 0 dy)) )
    (set x (+ x dx))
    (set y (+ y dy))
    (gSetBrush painter white)
    (gDrawRect painter 0 0 width height)
    (gSetBrush painter blue)
    (gDrawEllipse painter x y radius radius)
    
    (gDrawEllipse painter 1playerX 1playerY 30 100 )
)
